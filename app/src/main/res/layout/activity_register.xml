<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <TextView
        android:layout_width="0.00001dp"
        android:layout_height="0.000001dp"
        android:id="@+id/tvidDivisi"/>
    <TextView
        android:layout_width="0.00001dp"
        android:layout_height="0.000001dp"
        android:id="@+id/tvidWilayah"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mandiri_logo" />
            </LinearLayout>
            <TextView
                android:fontFamily="@font/inter"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/app_name"
                android:textSize="@dimen/text"/>
            <TextView
                android:fontFamily="@font/inter_extra_bold"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/register"
                android:textSize="@dimen/header_text_extra_large"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        app:hintTextColor="@color/colorBlack2"
                        android:textColorHint="@color/colorConcrete"
                        android:focusableInTouchMode="true">
                        <EditText
                            android:fontFamily="@font/inter"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="@color/colorConcrete"
                            android:id="@+id/etName"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/name"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/divisi"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/colorConcrete"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Spinner
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerDivisi"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/text_medium"
                                android:layout_height="match_parent"
                                android:src="@drawable/arrow_down"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <TextView
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/wilayah"
                        android:textSize="@dimen/text_medium"
                        android:textColor="@color/colorConcrete"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Spinner
                            android:layout_weight="1"
                            android:background="@color/colorWhite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/spinnerWilayah"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="10"
                            android:gravity="center">
                            <ImageView
                                android:layout_width="@dimen/text_medium"
                                android:layout_height="match_parent"
                                android:src="@drawable/arrow_down"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        app:hintTextColor="@color/colorBlack2"
                        android:textColorHint="@color/colorConcrete"
                        android:focusableInTouchMode="true">
                        <EditText
                            android:fontFamily="@font/inter"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="@color/colorConcrete"
                            android:id="@+id/etUsername"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:ems="10"
                            android:inputType="text"
                            android:textSize="@dimen/text_medium"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:fontFamily="@font/inter"
                        app:hintTextColor="@color/colorBlack2"
                        android:textColorHint="@color/colorConcrete"
                        android:focusableInTouchMode="true">
                        <EditText
                            android:fontFamily="@font/inter"
                            android:textColorHighlight="@color/colorPrimary"
                            android:textColorHint="@color/colorConcrete"
                            android:id="@+id/etNIP"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/nip"
                            android:ems="10"
                            android:inputType="number"
                            android:textSize="@dimen/text_medium"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_margin="5dp"
                        android:fontFamily="@font/inter"
                        app:hintTextColor="@color/colorBlack2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:textColorHint="@color/colorConcrete"
                        android:focusableInTouchMode="true"
                        card_view:passwordToggleEnabled="true">
                        <EditText
                            android:fontFamily="@font/inter"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorConcrete"
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/password_login"
                            android:ems="10"
                            android:inputType="text|textPassword"
                            android:textSize="@dimen/text_medium"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/colorWhite">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_margin="5dp"
                        android:fontFamily="@font/inter"
                        app:hintTextColor="@color/colorBlack2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="true"
                        android:textColorHint="@color/colorConcrete"
                        android:focusableInTouchMode="true"
                        card_view:passwordToggleEnabled="true">
                        <EditText
                            android:fontFamily="@font/inter"
                            android:textColor="@color/colorPrimary"
                            android:textColorHint="@color/colorConcrete"
                            android:id="@+id/etConfirmPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/confirm_password_login"
                            android:ems="10"
                            android:inputType="text|textPassword"
                            android:textSize="@dimen/text_medium"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:background="@color/colorWhite">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/indonesia"
                            android:layout_margin="5dp"/>
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:fontFamily="@font/inter"
                            app:hintTextColor="@color/colorBlack2"
                            android:textColorHint="@color/colorConcrete"
                            android:focusableInTouchMode="true">
                            <EditText
                                android:enabled="false"
                                android:fontFamily="@font/inter"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorConcrete"
                                android:textColor="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/code_phone"
                                android:ems="10"
                                android:text="+62"
                                android:inputType="text"
                                android:textSize="@dimen/text_medium"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/colorWhite">
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_margin="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="true"
                            android:fontFamily="@font/inter"
                            app:hintTextColor="@color/colorBlack2"
                            android:textColorHint="@color/colorConcrete"
                            android:focusableInTouchMode="true">
                            <EditText
                                android:fontFamily="@font/inter"
                                android:textColorHighlight="@color/colorPrimary"
                                android:textColorHint="@color/colorConcrete"
                                android:id="@+id/etPhoneNumber"
                                android:textColor="@color/colorPrimary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/number_phone"
                                android:ems="10"
                                android:inputType="number"
                                android:textSize="@dimen/text_medium"/>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearConfirm"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_width="335dp"
                android:layout_height="59dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_rounded_primary">
                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/colorSecondary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_extra_large"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp">
                <TextView
                    android:fontFamily="@font/inter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/have_account"
                    android:textSize="@dimen/text_medium"/>
                <TextView
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/login_here"
                    android:textSize="@dimen/text_medium"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="14dp"
                    card_view:cardCornerRadius="4dp"
                    android:layout_centerInParent="true">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="1000dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/colorPrimary">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Result Perhitungan Investasi"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="20sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Variabel"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_weight="1.5"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Rencana Anggaran Biaya"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_weight="1.2"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Standar Nilai Investasi"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="Batas Bawah"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="15sp"
                                            android:textStyle="bold"
                                            android:layout_weight="1"/>
                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:text="Batas Atas"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="15sp"
                                            android:textStyle="bold"
                                            android:layout_weight="1"/>
                                    </LinearLayout>
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Keterangan"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:layout_weight="1.5"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="1000dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Bangunan"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/tvRencanaBangunanAnggaran"
                                android:text="Rencana Anggaran Biaya"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tvBatasBawahBangunan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Bawah"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                    <TextView
                                        android:id="@+id/tvBatasAtasBangunan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Atas"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvKeteranganBangunan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Keterangan"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="1000dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Sarana Prasarana"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/tvRencanaSaranaPrasaranaAnggaran"
                                android:text="Rencana Anggaran Biaya"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tvBatasBawahSaranaPrasarana"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Bawah"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                    <TextView
                                        android:id="@+id/tvBatasAtasSaranaPrasarana"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Atas"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvKeteranganSaranaPrasarana"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Keterangan"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="1000dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Peralatan dan Alkes"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/tvRencanaPeralatanDanAlkesAnggaran"
                                android:text="Rencana Anggaran Biaya"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tvBatasBawahPeralatanDanAlkes"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Bawah"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                    <TextView
                                        android:id="@+id/tvBatasAtasPeralatanDanAlkes"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Atas"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvKeteranganPeralatanDanAlkes"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Keterangan"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="1000dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Total Biaya"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/tvRencanaTotalBiaya"
                                android:text="Rencana Anggaran Biaya"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.2"/>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:id="@+id/tvBatasBawahTotalBiaya"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Bawah"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                    <TextView
                                        android:id="@+id/tvBatasAtasTotalBiaya"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="Batas Atas"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="15sp"
                                        android:textStyle="bold"
                                        android:layout_weight="1"/>
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/tvKeteranganTotalBiaya"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Keterangan"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1.5"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="1000dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tvPLafondText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Plafon (70% dari Total Biaya)"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="1"/>
                            <TextView
                                android:id="@+id/tvKeteranganJumlah"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Keterangan"
                                android:textColor="@color/colorBlack"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:layout_weight="3"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="0.1sp"
                            android:id="@+id/tvLink"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:layout_weight="1"
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="100dp"
                        android:id="@+id/btnKembali"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kembali"
                        android:background="@drawable/button_blue_rounded"
                        android:textColor="@color/colorWhite" />
                    <Button
                        android:layout_weight="1"
                        android:layout_marginRight="100dp"
                        android:layout_marginLeft="100dp"
                        android:id="@+id/btnPrint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Print"
                        android:background="@drawable/button_red_rounded"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

</RelativeLayout>
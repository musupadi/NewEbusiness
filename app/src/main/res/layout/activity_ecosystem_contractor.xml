<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:id="@+id/linearMore"
                        android:layout_width="50dp"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/ivMore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/more_vertical_concerate"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorConcrete"
                        android:layout_marginBottom="18dp"
                        android:layout_marginTop="18dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:id="@+id/linearBack">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="match_parent"
                            android:src="@drawable/chevron_left_concerate"
                            android:layout_margin="10dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="@string/ecosystem"
                            android:gravity="center|left"
                            android:fontFamily="@font/inter"
                            android:textStyle="bold"
                            android:textSize="@dimen/header_text_small"
                            android:textColor="@color/colorPrimary"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/linearAvailable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/linearPlayersInConstruction"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_regular"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/icon_regular"
                                            android:layout_height="@dimen/icon_regular"
                                            android:src="@drawable/business_review"
                                            android:layout_margin="10dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/players_in_construction"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/text_extra_large"
                                                android:fontFamily="@font/inter"/>
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/linearPlayersInSupplyingMaterials"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_regular"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/icon_regular"
                                            android:layout_height="@dimen/icon_regular"
                                            android:src="@drawable/newsletter"
                                            android:layout_margin="10dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/players_supply_material"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/text_extra_large" />
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/loreum_ipsum"
                                                android:textColor="@color/colorConcrete"
                                                android:textSize="@dimen/text_small_medium" />
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearBinakonstruksi"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_regular"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/icon_regular"
                                            android:layout_height="@dimen/icon_regular"
                                            android:src="@drawable/newsletter"
                                            android:layout_margin="10dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/construction_service_business"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/text_extra_large"
                                                android:fontFamily="@font/inter"/>
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/linearSupportingPlayers"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_regular"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/icon_regular"
                                            android:layout_height="@dimen/icon_regular"
                                            android:src="@drawable/third_party_administrator"
                                            android:layout_margin="10dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/supporting_players"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/text_extra_large"
                                                android:fontFamily="@font/inter"/>
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearEcosystemIndustry"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_regular"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/icon_regular"
                                            android:layout_height="@dimen/icon_regular"
                                            android:src="@drawable/bpjs"
                                            android:layout_margin="10dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/ecosystem_industry"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/text_extra_large"
                                                android:fontFamily="@font/inter"/>
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearExecutive"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_regular"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/icon_regular"
                                            android:layout_height="@dimen/icon_regular"
                                            android:src="@drawable/presidential_decree"
                                            android:layout_margin="10dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/executive"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/text_extra_large"
                                                android:fontFamily="@font/inter"/>
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/linearConsultant"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/box_regular"
                            android:orientation="horizontal">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_height="match_parent"
                                    app:cardCornerRadius="10dp"
                                    app:cardElevation="10dp">
                                    <LinearLayout
                                        android:padding="10dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:gravity="center">
                                        <ImageView
                                            android:layout_width="@dimen/icon_regular"
                                            android:layout_height="@dimen/icon_regular"
                                            android:src="@drawable/government_regulations"
                                            android:layout_margin="10dp"/>
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical">
                                            <TextView
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:text="@string/consultant"
                                                android:textStyle="bold"
                                                android:textSize="@dimen/text_extra_large"
                                                android:fontFamily="@font/inter"/>
                                        </LinearLayout>

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearNavigator"
                android:orientation="vertical">
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/recyclerNav"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/header_logo" />
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/inter_extra_bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="@string/login"
                    android:textSize="@dimen/header_text_extra_large"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="15dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:fontFamily="@font/inter"
                    app:hintTextColor="@color/colorBlack2"
                    android:textColorHint="@color/colorConcrete"
                    android:focusableInTouchMode="true">
                    <EditText
                        android:fontFamily="@font/inter"
                        android:textColorHighlight="@color/colorPrimary"
                        android:textColorHint="@color/colorConcrete"
                        android:id="@+id/etUsername"
                        android:textColor="@color/colorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/username_login"
                        android:ems="10"
                        android:inputType="text"
                        android:textSize="@dimen/text_medium"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"
                android:layout_margin="15dp">
                <com.google.android.material.textfield.TextInputLayout
                    android:fontFamily="@font/inter"
                    android:layout_margin="5dp"
                    app:hintTextColor="@color/colorBlack2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:textColorHint="@color/colorConcrete"
                    android:focusableInTouchMode="true"
                    card_view:passwordToggleEnabled="true">
                    <EditText
                        android:fontFamily="@font/inter"
                        android:textColor="@color/colorPrimary"
                        android:textColorHint="@color/colorConcrete"
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password_login"
                        android:ems="10"
                        android:inputType="text|textPassword"
                        android:textSize="@dimen/text_medium"/>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:fontFamily="@font/inter"
                android:gravity="left"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="@string/forgot_password_login"
                android:textSize="@dimen/text_medium"/>
            <LinearLayout
                android:id="@+id/linearLogin"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="120dp"
                android:layout_width="335dp"
                android:layout_height="59dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_rounded_primary">
                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/login"
                    android:textColor="@color/colorSecondary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_extra_large"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:fontFamily="@font/inter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/not_have_account"
                    android:textSize="@dimen/text_medium"/>
                <TextView
                    android:id="@+id/tvRegister"
                    android:fontFamily="@font/inter"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/register_here"
                    android:textSize="@dimen/text_medium"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </LinearLayout>
    </ScrollView>
</LinearLayout>